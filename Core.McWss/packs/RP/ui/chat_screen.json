{
  "namespace": "chat",
  "messages_text": {
    "$trigger_text": "§p§k",
    "type": "panel",
    "size": ["100%", "100%c"],
    "controls": [
      {
        "text": {
          "type": "label",
          "color": "$chat_text_color",
          "enable_profanity_filter": false,
          "localize": false,
          "size": ["100%", "default"],
          "text": "#text",
          "text_tts": "#text_tts",
          "font_type": "$chat_font_type",
          "font_scale_factor": "$chat_font_scale_factor",
          "line_padding": "$chat_line_spacing"
        }
      }
    ],
    "bindings": [
        {
          "binding_name": "#chat_visible"
        },
        {
          "binding_type": "view",
          "source_property_name": "(#chat_visible and not ('%.23s' * #text = $trigger_text)))",
          "target_property_name": "#visible"
        }
      ]
  }
}